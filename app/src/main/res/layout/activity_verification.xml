<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminActivity.AdminActivity.VerificationActivity"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác thực CMND/CCCD"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ẢNH MẶT TRƯỚC"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hình ảnh chụp trực diện và rõ nét thông tin"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="10dp">

        <!-- ImageView -->

        <ImageView
            android:id="@+id/ivCMNDtruoc"
            android:background="@drawable/boder_background_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"/>
        <!-- Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/ivCMNDtruoc"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/btnCMNDtruoc"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="80dp"
                android:background="@mipmap/add_image_icon" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="Nhấn để upload ảnh"/>
        </LinearLayout>
<!--        <Button-->
<!--            android:id="@+id/btnCMNDtruoc"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:background="@mipmap/add_image_icon"-->
<!--            />-->


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ẢNH MẶT SAU"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hình ảnh chụp trực diện và rõ nét thông tin"
        android:gravity="center" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="10dp">

        <!-- ImageView -->
        <ImageView
            android:id="@+id/ivCMNDsau"
            android:background="@drawable/boder_background_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"/>

        <!-- Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/ivCMNDsau"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/btnCMNDsau"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="80dp"
                android:background="@mipmap/add_image_icon" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="Nhấn để upload ảnh"/>
        </LinearLayout>
<!--        <Button-->
<!--            android:id="@+id/btnCMNDsau"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:background="@mipmap/add_image_icon" />-->

    </RelativeLayout>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tiếp tục"
        android:layout_margin="10dp"
        android:layout_centerInParent="true" />



</LinearLayout>