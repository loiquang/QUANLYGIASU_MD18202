<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtNameTeach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên GV"

            android:textSize="30sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edtTextB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="@drawable/layout_edt"
            android:hint="Ngày bắt đầu" />

        <EditText
            android:id="@+id/edtTextN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_edt"
            android:hint="Ngày kết thúc" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edtSoHS"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Số học sinh"
                android:background="@drawable/layout_edt"
                android:layout_marginTop="5dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txtToiDa"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tối Đa"
                android:textSize="25sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTien"
                android:layout_weight="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành Tiền"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:background="@drawable/layout_edt"
                android:layout_marginTop="5dp"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/btnTamTinh"
                android:layout_width="wrap_content"
                android:background="@drawable/layout_edt"
                android:layout_height="wrap_content"
                android:text="Tạm Tính"
                android:textAllCaps="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            >
            <Button
                android:id="@+id/btnDK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#ffff"
                android:background="@drawable/layout_edt"
                android:text="Đăng Ký"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:background="@drawable/layout_edt"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>