<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activity.HoSoGiaSu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/preview" />
            <TextView
                android:id="@+id/txtTenGV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="tên Giảng viên"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgGV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:src="@drawable/stration" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="6"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:textSize="20sp"
                        android:textColor="#ffff"
                        android:background="@drawable/layout_text_tien"
                        android:padding="3dp"
                        android:layout_marginTop="10dp"
                        android:text="250.000đ" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hồ Sơ"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#131313"/>
                    <TextView
                        android:id="@+id/txtKinhNghiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giảng viên có kinh nghiệm dạy 10 năm ở fpt"
                        android:textSize="18sp"
                        android:textColor="#131313"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chứng chỉ"
                        android:textSize="18sp"
                        android:textColor="#131313"/>
                    <TextView
                        android:id="@+id/txtChungChi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thạc sĩ hóa học trường bách khoa"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#131313"/>
                    <TextView
                        android:id="@+id/txtChungChi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chứng chỉ giảng viên sư phạm"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#131313"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhiệt tình có trách nhiệm, hướng dẫn và phân tích rõ ràng"
                        android:textSize="18sp"
                        android:textColor="#131313"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yêu cầu"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:textColor="#131313"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtHS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số học sinh:"
                            android:textSize="18sp"
                            android:textColor="#131313"/>
                        <TextView
                            android:id="@+id/txtDayTD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dạy tối đa"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/txtHS"
                            android:textSize="18sp"
                            android:textColor="#131313"/>
                        <TextView
                            android:id="@+id/txtSoHS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/txtDayTD"
                            android:textSize="18sp"
                            android:textColor="#131313"/>
                        <TextView
                            android:id="@+id/txtDonvi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="học sinh"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/txtSoHS"
                            android:textSize="18sp"
                            android:textColor="#131313"/>
                        <TextView
                            android:id="@+id/txtKV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khu vực:"
                            android:layout_below="@id/txtHS"
                            android:textSize="18sp"
                            android:textColor="#131313"/>
                        <TextView
                            android:id="@+id/txtKhuVuc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quận 12"
                            android:layout_below="@id/txtSoHS"
                            android:layout_toRightOf="@id/txtKV"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:textColor="#131313"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnDangKyGV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/layout_button"
                android:hint="Đăng ký gia sư"
                android:textColorHint="#ffff" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>